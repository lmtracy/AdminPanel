<p id="notice"><%= notice %></p>

  <ol class="breadcrumb">
    <li class="breadcrumb-item active">Cohorts</li>
  </ol>

<table>
  <thead>
    <tr>
      <th>Cohort Name</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Course ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cohorts.each do |cohort| %>
      <tr>
        <td><%= cohort.name %></td>
        <td><%= cohort.start_date.strftime("%m " "%d," " %Y") %></td>
        <td><%= cohort.end_date.strftime("%m " "%d," " %Y") %></td>
        <td><%= cohort.course_id %></td>
        <td><%= link_to 'Show', cohort %></td>
        <td><%= link_to 'Edit', edit_cohort_path(cohort) %></td>
        <td><%= link_to 'Destroy', cohort, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cohort', new_cohort_path %>
