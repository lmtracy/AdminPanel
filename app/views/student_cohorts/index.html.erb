<div class="sidenav">
<ul>
<%= image_tag 'xavier_school_nav.png' %>
<li><%= link_to 'Cohorts', cohorts_path %></li>
<li><%= link_to 'Courses', courses_path %></li>
<li><%= link_to 'Teachers', teachers_path %></li>
<li><%= link_to 'Students', students_path %></li>
</ul>
</div>

<div id="main">
<p id="notice"><%= notice %></p>

<h1>Student Cohorts</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Cohort</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_cohorts.each do |student_cohort| %>
      <tr>
        <td><%= student_cohort.student_id %></td>
        <td><%= student_cohort.cohort_id %></td>
        <td><%= link_to 'Show', student_cohort %></td>
        <td><%= link_to 'Edit', edit_student_cohort_path(student_cohort) %></td>
        <td><%= link_to 'Destroy', student_cohort, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student Cohort', new_student_cohort_path %>
</div>